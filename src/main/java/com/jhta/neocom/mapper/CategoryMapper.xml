<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
 <mapper namespace="com.jhta.neocom.mapper.CategoryMapper"> 
	<insert id="insert" parameterType="com.jhta.neocom.model.CategoryVo">
		insert into category
        values(get_seq('cateSeq'),#{category_name},#{category_parent},#{category_order})
	</insert>
	<delete id="delete" parameterType="int">
		delete from category where category_id=#{category_id}
	</delete>
	
	<sql id="search">

		<if test="field!=null and field!=''">
			where ${field} like CONCAT('%',#{keyword},'%')
		</if>

	</sql>
	<select id="find" parameterType="int" resultType="com.jhta.neocom.model.CategoryVo">
		select * from category where category_id=#{category_id}
	</select>



	<update id="update" parameterType="com.jhta.neocom.model.CategoryVo" >
		update category set
		category_name = #{category_name},
		category_parent = #{category_parent},
		category_order= #{category_order}
		where category_id=#{category_id}
	</update>
	
		<!--해당 전체 카테고리의 갯수 -->
	<select id="count" parameterType="int" resultType="int">
		select IFnull(count(*),0) from category 
			<include refid="search"/>	
	</select>

	<!-- 페이징처리 -->
	<select id="list" parameterType="hashmap" resultType="com.jhta.neocom.model.CategoryVo">
		 select a.* from 
		 (
 			SELECT @rownum:=@rownum+1  rnum, aa.* FROM 
				category aa, 
  				(SELECT @ROWNUM := 0) R
			<include refid="search"/> 
			order by category_id asc
 		 )a
  		<![CDATA[	where rnum>=#{startRow} and rnum<=#{endRow}]]>
  </select>
</mapper>